<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-secondary fixed-top">
        @Html.ActionLink("Chat", "Chat", "Home", new { area = "" }, new { @class = "navbar-brand" })
       @* <a href="@Url.Action("Chat", "Home", null)" class="navbar-brand" title="Chat Rooms">*@
            <i class="fa fa-comments"></i>
        </a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">


                @*<li class="nav-item">@Html.ActionLink("Chat Rooms", "Chat", "Home", htmlAttributes: new { @class = "nav-link" })</li>*@
                <li class="nav-item">@Html.ActionLink("Registration", "Register", "Home", htmlAttributes: new { @class = "nav-link" })</li>





                <li class="nav-item">@Html.ActionLink("Chat Room", "Admin", "Home", htmlAttributes: new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Create Role", "Role", "Home", htmlAttributes: new { @class = "nav-link" })</li>

                <li class="nav-item">@Html.ActionLink("User Role", "UserRole", "Home", htmlAttributes: new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Room Assign To User", "RoomAssign", "Home", htmlAttributes: new { @class = "nav-link" })</li>




            </ul>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>











